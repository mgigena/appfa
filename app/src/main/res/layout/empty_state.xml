<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/emptyContainer"
                android:padding="15dp"
                android:gravity="center"
                android:background="@color/emptyStateBackground">

    <ImageView
        android:id="@+id/emptyStateIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_empty_state"/>

    <TextView
        android:id="@+id/emptyStateTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/emptyStateIcon"
        android:text="@string/emptyStateTeamTitle"/>

    <TextView
        android:gravity="center"
        android:id="@+id/emptyStateSubtitleitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emptyStateTitle"
        android:text="@string/emptyStateTeamSubtitle"/>

</RelativeLayout>