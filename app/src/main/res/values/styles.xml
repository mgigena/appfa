<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppFullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/loginBackground</item>
        <item name="colorPrimaryDark">@color/loginBackground</item>
        <item name="colorAccent">@color/loginBackground</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/splashPrimary</item>
        <item name="colorPrimaryDark">@color/splashPrimary</item>
        <item name="colorAccent">@color/splashPrimary</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="WrapContent">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="MatchParent">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!--LOGIN-->

    <style name="LoginScreen" parent="MatchParent">
        <!--<item name="android:background">@color/loginBackground</item>-->
        <item name="android:background">@color/loginBackground</item>
        <item name="android:paddingBottom">@dimen/loginScreenPaddingBottom</item>
        <item name="android:paddingTop">@dimen/loginScreenPaddingTop</item>
        <item name="android:paddingRight">@dimen/loginScreenPaddingRight</item>
        <item name="android:paddingLeft">@dimen/loginScreenPaddingLeft</item>
    </style>

    <style name="LoginLogoText" parent="WrapContent">
        <item name="fontPath">fonts/splash.ttf</item>
        <item name="android:textColor">@color/loginLogoTextColor</item>
        <item name="android:textSize">@dimen/loginLogoTextSize</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:text">@string/app_name</item>
    </style>

    <style name="LoginFormContainer" parent="WrapContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">25dp</item>
    </style>

    <style name="LoginFormTitle" parent="WrapContent">
        <item name="fontPath">fonts/mirror_82.otf</item>
        <item name="android:textColor">@color/loginFormTitleTextColor</item>
        <item name="android:textSize">@dimen/loginFormTitleTextSize</item>
        <item name="android:text">@string/loginFormTitle</item>
        <item name="android:layout_marginTop">@dimen/loginFormSubtitleMarginTop</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="LoginFormButton">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:theme">@style/AppTheme.Button</item>
    </style>

    <style name="RegistrationFormButton" parent="LoginFormButton">
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="fontPath">fonts/mirror_82.otf</item>
        <item name="colorButtonNormal">@color/loginFormButtonColor</item>
        <item name="android:textColor">@color/loginFormButtonTextColor</item>
    </style>

    <style name="LoginFormDataContainer" parent="MatchParent">
        <item name="android:layout_height">@dimen/loginFormDataContainerHeight</item>
        <item name="android:layout_marginTop">@dimen/loginFormDataContainerMarginTop</item>
        <item name="android:divider">@drawable/separator</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:orientation">horizontal</item>
        <item name="background">@null</item>
        <item name="android:paddingRight">@dimen/loginFormDataContainerPaddingRight</item>
        <item name="android:paddingLeft">@dimen/loginFormDataContainerPaddingLeft</item>
        <item name="android:showDividers">middle</item>
    </style>

    <style name="LoginFormDataContainerImage">
        <item name="android:layout_height">@dimen/loginFormDataContainerImageSize</item>
        <item name="android:layout_width">@dimen/loginFormDataContainerImageSize</item>
    </style>

    <style name="LoginFormDataEditText">
        <item name="android:layout_marginTop">@dimen/loginFormDataContainerMarginTop</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/loginFormDataContainerHeight</item>
        <item name="fontPath">fonts/mirror_82.otf</item>
        <item name="android:ems">10</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:theme">@style/LoginFormEditTextTheme</item>
    </style>

    <style name="LoginFormDataPasswordEditText">
        <item name="android:layout_marginTop">@dimen/loginFormDataContainerMarginTop</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/loginFormDataContainerHeight</item>
        <item name="android:ems">10</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:theme">@style/LoginFormEditTextTheme</item>
    </style>

    <style name="LoginFormEditTextTheme" parent="LoginFormDataContainer">
        <item name="colorAccent">@color/colorWhite</item>
    </style>

    <style name="LoginFormShowPassword" parent="WrapContent">
        <item name="android:layout_width">match_parent</item>
        <item name="fontPath">fonts/mirror_82.otf</item>
        <item name="android:text">@string/loginFormShowPassword</item>
        <item name="android:theme">@style/LoginFormEditTextTheme</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <!--ERROR-->
    <style name="ErrorMessageStyle" parent="WrapContent">
        <item name="fontPath">fonts/mirror_82.otf</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/errorMessageColor</item>
        <item name="android:textSize">@dimen/errorMessageTextSize</item>
    </style>

    <!--REGISTRATION-->
    <style name="RegistrationButtonOnLogin" parent="WrapContent">
        <item name="android:text">@string/registrationTextButton</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/registrationOnLoginTextSize</item>
        <item name="fontPath">fonts/mirror_82.otf</item>
    </style>

    <style name="RegistrationScreen" parent="MatchParent">
        <!--<item name="android:background">@color/loginBackground</item>-->
        <item name="android:background">@drawable/login_bg</item>
        <item name="android:paddingBottom">@dimen/loginScreenPaddingBottom</item>
        <item name="android:paddingRight">@dimen/loginScreenPaddingRight</item>
        <item name="android:paddingLeft">@dimen/loginScreenPaddingLeft</item>
    </style>

    <style name="SplashScreen" parent="MatchParent">
        <item name="android:background">@color/splashPrimary</item>
    </style>

    <style name="SplashText">
        <item name="fontPath">fonts/splash.ttf</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">48sp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="HeaderText">
        <item name="fontPath">fonts/splash.ttf</item>
    </style>

</resources>
